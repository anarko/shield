{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",    
        
        "typeRoots": ["./types"],
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "files":["./src/custom.d.ts"],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}